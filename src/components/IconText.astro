---
import { cn } from '@/utils';
import { Icon } from 'astro-icon/components';
import IconWrapper from './IconWrapper.astro';

const { class: className, title, href, icon, subTitle, ...props } = Astro.props;
---

<div
	class={cn(
		className,
		'flex flex-row items-center gap-x-2',
		href && 'hover:opacity-75 transition-all'
	)}
>
	<IconWrapper icon="arc" class="bg-background-tertiary"/>
	<div class="flex flex-col">
		<span class="text-xs uppercase text-accent-200">{title}</span>
		<span class="font-bold dark:text-white">{subTitle}</span>
	</div>
</div>
